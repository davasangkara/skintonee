<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textView_history_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori: Light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_history_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akurasi: 95.50%, Rekomendasi: Sangat Cocok"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-06-2025 14:30:15"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/tertiary_text_light" />

</LinearLayout>